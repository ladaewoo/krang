<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="krang.App">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="Gainsboro" />
            <Setter Property="TextColor" Value="LightSlateGray" />
            <Setter Property="FontSize" Value="40" />
        </Style>
        <Style TargetType="Button" x:Key="operator_button">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="BackgroundColor" Value="LightSlateGray" />
        </Style>
        <Style TargetType="Button" x:Key="ac_button">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="BackgroundColor" Value="Red" />
        </Style>
        <Style TargetType="Grid" x:Key="main_grid">
            <Setter Property="Margin" Value="20" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </Application.Resources>
</Application>